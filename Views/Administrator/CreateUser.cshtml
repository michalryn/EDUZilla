@using EDUZilla.ViewModels.User
@model CreateUserViewModel

@{
    ViewData["Title"] = @languageResource["CreateUser"];
}

<h1>@languageResource["CreateUser"]</h1>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control" required />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control" required/>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" required/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" required/>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Role" class="form-label"></label> <br />
        @foreach (var role in Model.Roles)
        {
            <div class="form-check-inline">
                <input class="form-check-input" type="radio" asp-for="Role" id="@role" name="Role" value="@role" required/>
                <label class="form-check-label" for="@role">
                    @languageResource[role]
                </label>
            </div>
        }
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>
    <div class="col-12 mb-3">
        <button type="submit" class="btn btn-primary">@languageResource["CreateUser"]</button>
    </div>

</form>

<a asp-action="Index" class="btn btn-secondary">@languageResource["Back"]</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}