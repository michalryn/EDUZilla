@{
    ViewData["Title"] = "Manage Password";
}
<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating  py-1">
                <input class="form-control" autocomplete="current-password" aria-required="true" />
                <label class="form-label">Obecne hasło</label>
                <span class="text-danger"></span>
            </div>
            <div class="form-floating  py-1">
                <input class="form-control" autocomplete="new-password" aria-required="true" />
                <label class="form-label">Nowe hasło</label>
                <span class="text-danger"></span>
            </div>
            <div class="form-floating  py-1">
                <input class="form-control" autocomplete="new-password" aria-required="true" />
                <label class="form-label">Potwierdź nowe hasło</label>
                <span class="text-danger"></span>
            </div>
            <div class="py-1">
                <button type="submit" class="w-100 btn btn-lg btn-primary">Zaaktualizuj hasło</button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
