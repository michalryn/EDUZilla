@using EDUZilla.ViewModels.Course
@{
    ViewData["Title"] = "Panel nauczyciela";
}

<h1>@languageResource["TeachersPanel"]</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">@languageResource["MySubjects"]</th>
            <th scope="col">@languageResource["Actions"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach(CourseListViewModel course in Model)
        {
            <tr>
                <td><a asp-action="Index" asp-controller ="Course" asp-route-id="@course.Id">@course.Name</a></td>
                <td><a class="btn btn-primary" asp-action="ViewClasses" asp-controller="Course" asp-route-id="@course.Id">@languageResource["Classes"]</a></td>
            </tr>
        }
    </tbody>
</table>

