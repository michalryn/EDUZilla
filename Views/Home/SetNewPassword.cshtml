@using EDUZilla.ViewModels.User
@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}
<h3>@languageResource["ChangePassword"]</h3>

<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating py-1">
                <input asp-for="Email" class="form-control" aria-required="true" />
                <label asp-for="Email" class="form-label">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating py-1">
                <input asp-for="Token" class="form-control" aria-required="true" />
                <label asp-for="Token" class="form-label">Token</label>
                <span asp-validation-for="Token" class="text-danger"></span>
            </div>
            <div class="form-floating py-1">
                <input asp-for="Password" class="form-control" aria-required="true" />
                <label asp-for="Password" class="form-label">@languageResource["NewPassword"]</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating py-1">
                <input asp-for="RepeatPassword" class="form-control" aria-required="true" />
                <label asp-for="RepeatPassword" class="form-label">@languageResource["ConfirmNewPassword"]</label>
                <span asp-validation-for="RepeatPassword" class="text-danger"></span>
            </div>
            <div class="py-1">
                <button  asp-controller="Home" asp-action="SetNewPassword" class="w-100 btn btn-lg btn-primary">@languageResource["UpdatePassword"]</button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
