@using EDUZilla.ViewModels.Class;
@{
    ViewData["Title"] = "Klasy";
}

<h1>Klasy</h1>
<ul class="list-group mb-3">
    @if (Model != null)
    {
        @foreach (ClassListViewModel classModel in Model)
        {
            <li class="list-group-item d-flex justify-content-between">@classModel.Id @classModel.Name<a asp-action="EditClass" asp-route-id="@classModel.Id" class="btn btn-primary">Edytuj</a></li>
        }
    }
    else
    {
        <li class="list-group-item">Brak klas w systemie</li>
    }
</ul>
<form method="post" asp-controller="Class" asp-action="AddClass">
    <div class="mb-3">
        <label class="form-label"></label>
        <input name="name" type="text" placeholder="Nazwa klasy" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Stwórz klasę</button>
</form>