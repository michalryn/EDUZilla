@{
    ViewData["Title"] = @languageResource["AddFile"];
}

<h1>@languageResource["AddFile"]</h1>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" value="@Model" name="CourseId"/>
    <div class="mb-3">
        <label class="form-label">@languageResource["File"]:</label>
        <input class="form-control" type="file" name="File" placeholder="@languageResource["AddFile"]"/>
    </div>
    <div class="mb-3">
        <label class="form-label">@languageResource["Description"]</label>
        <input class="form-control" type="text" name="FileDescription"/>
    </div>
    <button type="submit" class="btn btn-primary">@languageResource["Add"]</button>
    <a class="btn btn-secondary" asp-action="Index" asp-route-id="@Model">@languageResource["Back"]</a>
</form>
